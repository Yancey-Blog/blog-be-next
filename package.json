{
  "name": "blog-be-next",
  "version": "0.0.1",
  "description": "The backend platform for Yancey blog.",
  "repository": "git@github.com:YanceyOfficial/blog-be-next.git",
  "author": "YanceyOfficial <yanceyofficial@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "watch": "nest start --watch",
    "commit": "git-cz",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.8.3",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.8.3",
    "@nestjs/platform-fastify": "^6.8.3",
    "ali-oss": "^6.1.1",
    "apollo-server-express": "^2.9.6",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "formidable": "^1.2.1",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.4",
    "nodejieba": "^2.3.2",
    "passport-jwt": "^4.0.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "serve-favicon": "^2.5.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/ramda": "^0.26.28",
    "@types/serve-favicon": "^2.2.31",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "commitizen": "^4.0.3",
    "commitlint-config-cz": "^0.12.1",
    "cross-env": "^6.0.3",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mockjs": "^1.0.1-beta3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "*.{ts,js,scss,css}": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  }
}
