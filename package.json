{
  "name": "blog-be-next",
  "version": "0.0.1",
  "description": "The backend platform for Yancey blog.",
  "repository": "git@github.com:Yancey-Blog/blog-be-next.git",
  "author": "YanceyOfficial <yanceyofficial@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "watch": "nest start --watch",
    "commit": "git-cz",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.8.3",
    "@nestjs/core": "^6.9.0",
    "@nestjs/common": "^6.9.0",
    "@nestjs/core": "^6.9.0",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.9.0",
    "@nestjs/typeorm": "^6.2.0",
    "ali-oss": "^6.2.1",
    "apollo-server-express": "^2.9.9",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "csurf": "^1.10.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.0.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.2",
    "mongodb": "^3.3.4",
    "mongoose": "^5.7.11",
    "morgan": "^1.9.1",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "serve-favicon": "^2.5.0",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.20",
    "uuid": "^3.3.3",
    "yancey-js-util": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@nestjs/cli": "^6.11.5",
    "@nestjs/schematics": "^6.7.3",
    "@nestjs/testing": "^6.8.3",
    "@types/ali-oss": "^6.0.4",
    "@types/compression": "^1.0.1",
    "@types/csurf": "^1.9.36",
    "@types/dotenv": "^8.2.0",
    "@types/express-rate-limit": "^3.3.3",
    "@types/graphql-type-json": "^0.3.2",
    "@types/hapi__joi": "^16.0.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.19",
    "@types/mongoose": "^5.5.31",
    "@types/jest": "^24.0.23",
    "@types/mongoose": "^5.5.32",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.8",
    "@types/ramda": "^0.26.34",
    "@types/serve-favicon": "^2.2.31",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.8.0",
    "commitizen": "^4.0.3",
    "commitlint-config-cz": "^0.12.1",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-nestjs": "^1.2.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mockjs": "^1.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "*.{ts,js,scss,css}": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  }
}
